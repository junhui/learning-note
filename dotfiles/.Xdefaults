! vim:      nu:ai:si:et:ts=4:sw=4:ft=xdefaults:
! ----------------------------------------------------------------------------

! Colors
URxvt.background:  #1c1c1c
URxvt.foreground:  #efefcf
URxvt*color0:      #1c1c1c
URxvt*color1:      #ff9383
URxvt*color2:      #aece92
URxvt*color3:      #ffd674
URxvt*color4:      #7ab2ff
URxvt*color5:      #ff5287
URxvt*color6:      #418179
URxvt*color7:      #bebebe
URxvt*color8:      #666666
URxvt*color9:      #cf6171
URxvt*color10:     #dcffa4
URxvt*color11:     #fff796
URxvt*color12:     #4186be
URxvt*color13:     #cf9ebe
URxvt*color14:     #71bebe
URxvt*color15:     #ffffff

! DPI font
Xft.dpi: 96.0
Xft.antialias: true

! Set the Perl lib
URxvt.perl-lib: ~/dotfiles/urxvt/perl

! Look and feel
URxvt*scrollBar_right: false
URxvt*scrollBar: false
URxvt*borderLess: false
URxvt*tintColor: white
URxvt*shading: 10
URxvt.font: xft:DejaVu Sans Mono:pixelsize=15
URxvt.boldFont: xft:DejaVu Sans Mono:pixelsize=15ans
URxvt*background: #000000
URxvt*foreground: #FFFFFF
URxvt.perl-ext-common: default,matcher
URxvt.urlLauncher: firefox
URxvt.matcher.button: 2
URxvt.matcher.pattern.1: \\bwww\\.[\\w-]\\.[\\w./?&@#-]*[\\w/-]

! Load extensions.
URxvt.perl-ext-common:  default,tabbed,clipboard,url-select

! Tabs support.
URxvt.tabbed.tabbar-fg: 2
URxvt.tabbed.tabbar-bg: 0
URxvt.tabbed.tab-fg:    2
URxvt.tabbed.tab-bg:    0
!Shift+ ↓ new tab
!Shift+ ← go to left tab
!Shift+ → go to right tab
!Ctrl+ ← move tab to the left
!Ctrl+ → move tab to the right
!Ctrl+D: close tab

! Copy and paste.
URxvt.keysym.M-c:   perl:clipboard:copy
URxvt.keysym.M-v:   perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
! 禁用到Ctrl+Shift的输入特殊字符功能
URxvt*iso14755_52: false



! Url selection.
URxvt.urlLauncher: chromium
URxvt.underlineURLs: true

! Compatibility settings
URxvt*termName: rxvt-256color
